{
	"name": "Save Image As...",
	"description": "Adds options to save images in different formats (PNG, JPG, WEBP, AVIF, GIF and PDF).",
	"author": "Rob Wu <rob@robwu.nl>, Peter Benoit <peterbenoit@gmail.com>",
	"version": "1.1.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	},
	"permissions": [
		"activeTab",
		"contextMenus",
		"downloads",
		"offscreen",
		"scripting"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"incognito": "split",
	"minimum_chrome_version": "106",
	"web_accessible_resources": [
		{
			"resources": [
				"lib/jspdf.umd.min.js"
			],
			"matches": [
				"<all_urls>"
			]
		}
	]
}
